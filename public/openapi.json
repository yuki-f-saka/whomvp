        "description": "グループのメンバー一覧（投票状況付き）を取得する",
        "tags": [
          "Members"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetMemberResponse"
                }
              }
            }
          },
